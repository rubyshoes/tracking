  .field
    = contract.label :name, "Start Date"
    %br/
    = contract.text_field  :st_date, :size => 12, :class => "ui-state-default"
  .field
    = contract.label :name, "End Date"
    %br/
    = contract.text_field  :end_date, :size => 12, :class => "ui-state-default"
</fieldset>
